<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatMsgItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2dp">

    <TextView
        android:id="@+id/tvParticipantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_8"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2dp"
        android:layout_marginTop="@dimen/dimen_4"
        android:autoLink="web"
        android:background="@drawable/background_chat_text"
        android:lineSpacingExtra="@dimen/_6sp"
        android:linksClickable="true"
        android:maxWidth="@dimen/chat_bubble_max_width"
        android:padding="@dimen/dimen_10"
        android:textAppearance="@style/TextAppearance.Regular14"
        android:textColor="@color/white_edit_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvParticipantName" />
</androidx.constraintlayout.widget.ConstraintLayout>