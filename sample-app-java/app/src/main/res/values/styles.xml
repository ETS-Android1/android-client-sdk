<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="MaterialDropDownButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableEnd">@android:drawable/arrow_down_float</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">@dimen/_8dp</item>
    </style>
</resources>